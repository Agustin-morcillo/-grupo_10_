<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head") %> 
<body>
    <%- include("../partials/header") %> 

    <main>
        <section class="cart-section">  

            <div class="cart-section-box">
                <div class="sections-welcome-titles-container">
                    <h2 class="sections-welcome-titles product-detail-welcome-title"><i class="fas fa-shopping-cart product-cart-icon"></i>Carrito de compras</h2>
                </div>
                <article class="product-box product-article">
                    <div class="product-image-container"> 
                        <img src="/images/products/product-mancuernas.jpg" alt="" class="cart-product-img product1-img"> 
                        <div class="lupas-container">
                        </div>
                    </div>

                    <div class="main-info">
                        <h3 class="product-name cart-detail-info">Mancuernas</h3>
                        <h3 class="product-prize cart-detail-info">$6000.00</h3> 

                        <div class="buttons-container">
                            <form action="index.html" method="GET" class="quantity-container">
                                <input type="number" id="cantidad" name="cantidad" value= 1 class="quantity-button">
                                <label for="cantidad" class="label-cantidad"> Cantidad </label>
                            </form>

                            <form action="/products/detail" method="GET" class="edit-container">
                                <button type="submit" class="edit-button buttons-style" id="editar"><i class="fas fa-edit edit-icon general-icon"></i> Editar </button>     
                            </form>

                            <form action="" method="GET" class="delete-container"> 
                                <button type="submit" class="delete-button buttons-style" id="delete"><i class="far fa-trash-alt"></i> Quitar del Carrito </button>  
                            </form>
                        </div>
                    </div>
                </article>    
                
                <article class="product-box product-article">
                   <div class="product-image-container"> 
                        <img src="/images/products/product-colchoneta.jpg" alt="Starter Kit" class="cart-product-img product2-img"> 
                        <div class="lupas-container">
                        </div>
                   </div>          
                   <div class="main-info">
                      <h3 class="product-name cart-detail-info">Colchoneta Flex</h3>
                      <h3 class="product-prize cart-detail-info">$2000.00</h3>    
                      <div class="buttons-container">
                         <form action="index.html" method="GET" class="quantity-container">
                            <input type="number" id="cantidad" name="cantidad" value= 1 class="quantity-button">
                            <label for="cantidad" class="label-cantidad"> Cantidad </label>
                         </form>
                         <form action="/products/detail" method="GET" class="edit-container">
                            <button type="submit" class="edit-button buttons-style" id="editar"><i class="fas fa-edit edit-icon general-icon"></i> Editar </button>     
                         </form>
                         <form action="" method="GET" class="delete-container"> 
                            <button type="submit" class="delete-button buttons-style" id="delete"><i class="far fa-trash-alt"></i> Quitar del Carrito </button>  
                         </form>
                      </div>        
                   </div>
                </article>    
            </div>
        </section>      
        
        <section class="total-section">
             <div class="totales-container">
                 <h2 class="total-info">Total: $8000.00</h2>
             </div>
        </section>
        
        <section class="buy-section">
             <article class="buy-container">
                 <form action="/" class="buy-container">
                    <input type="submit" value="¡ Comprar Ya !"  class="boton-comprar buttons-style" id="">
                </form>
                 <a href="/products" class="ver-mas">Ver más productos</a>
             </article> 
        </section>
    </main>
   
    <%- include("../partials/footer") %> 
</body>
</html>