<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %> 
<body>
    <%- include("./partials/header") %> 

    <div class="banner-title"> 
        <div class="logo-carrito"> 
             <i class="fas fa-shopping-cart"></i> 
        </div>
        <h1 class="title"> Carrito de Compras </h1> 
    </div>
    <main>
        <section class="cart-section">  

            <div class="cart-section-box">
                <article class="product-box product-article1">
                    <div class="product-image-container"> 
                        <img src="/img/mancuernas.jpg" alt="Starter Kit" class="cart-product-img product1-img"> 
                        <div class="lupas-container">
                            <div class="magnify magnify-plus"><i class="fas fa-search-plus"></i></div> 
                            <div class="magnify magnify-minus"><i class="fas fa-search-minus"></i></div>
                        </div>
                    </div>

                    <div class="main-info">
                        <h3 class="product-name cart-detail-info">Mancuernas</h3>
                        <h3 class="product-prize cart-detail-info">$500.00</h3> 

                        <div class="buttons-container">
                            <form action="index.html" method="GET" class="quantity-container">
                                <input type="number" id="cantidad" name="cantidad" value= 1 class="quantity-button">
                                <label for="cantidad" class="label-cantidad"> Cantidad </label>
                            </form>

                            <form action="/product" method="GET" class="edit-container">
                                <button type="submit" class="edit-button buttons-style" id="editar"><i class="fas fa-edit edit-icon general-icon"></i> Editar </button>     
                            </form>

                            <form action="" method="GET" class="delete-container"> 
                                <button type="submit" class="delete-button buttons-style" id="delete"><i class="far fa-trash-alt"></i> Quitar del Carrito </button>  
                            </form>
                        </div>
                    </div>
                </article>    
                <div class="product-divider"></div>
                <article class="product-box product-article2">
                   <div class="product-image-container"> 
                        <img src="/img/Colchonetas.jpg" alt="Starter Kit" class="cart-product-img product2-img"> 
                        <div class="lupas-container">
                           <div class="magnify magnify-plus"><i class="fas fa-search-plus"></i></div> 
                           <div class="magnify magnify-minus"><i class="fas fa-search-minus"></i></div>
                        </div>
                   </div>          
                   <div class="main-info">
                      <h3 class="product-name">Colchonetas</h3>
                      <h3 class="product-prize">$500.00</h3>    
                      <div class="buttons-container">
                         <form action="index.html" method="GET" class="quantity-container">
                            <input type="number" id="cantidad" name="cantidad" value= 1 class="quantity-button">
                            <label for="cantidad" class="label-cantidad"> Cantidad </label>
                         </form>
                         <form action="/product" method="GET" class="edit-container">
                            <button type="submit" class="edit-button buttons-style" id="editar"><i class="fas fa-edit edit-icon general-icon"></i> Editar </button>     
                         </form>
                         <form action="" method="GET" class="delete-container"> 
                            <button type="submit" class="delete-button buttons-style" id="delete"><i class="far fa-trash-alt"></i> Quitar del Carrito </button>  
                         </form>
                      </div>        
                   </div>
                </article>    
            </div>
        </section>      
        
        <section class="total-section">
             <div class="totales-container">
                 <h3 class="total-info">Subtotal:</h3>
                 <h3 class="total-info">Descuento:</h3>
                 <h2 class="total-info">TOTAL</h2>
             </div>
        </section>
        
        <section class="buy-section">
             <article class="buy-container">
                 <form action="/" class="buy-container">
                    <input type="submit" value="Comprar Ya!"  class="boton-comprar" id="">
                </form>
                 <p class="ver-mas">Ver m√°s productos</p>
             </article> 
        </section>
    </main>
   
    <%- include("./partials/footer") %> 
</body>
</html>