<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head") %> 
    <body>
        <%- include("../partials/header") %> 
    
        <main>
            <section>
                <article>
                    <div class="add-edit-product-rutine-card-main-container">
                        <div class="add-edit-product-rutine-card-container">
                            <div class="sections-welcome-titles-container">
                                <h2 class="sections-welcome-titles">Editar Rutina</h2>
                                <p class="sections-welcome-description">Modifica los campos para editar la rutina</p>
                            </div>
                            <div class="add-edit-product-rutine-card-form-container">
                                <p class="validation-error-product-title">
                                    <%= typeof errors == "undefined" ? "" : "Hay algún error en los campos" %>
                                </p>
                                
                                <form method="post" action="/rutines/edit/<%=rutineToEdit.id%>?_method=PUT" enctype="multipart/form-data">
                                    
                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-container">
                                            <label for="add-edit-product-name" class="admin-labels">Nombre de la rutina<span class="required-field">*</span></label>
                                        </div> 
                                        <input type="text" name="name" id="add-edit-product-name" class="add-edit-product-input inputs-fields" placeholder="Ej: Abdominales" value="<%=rutineToEdit.name%>">
                                        <p class="validation-error-product">
                                            <%= typeof errors == "undefined" ? "" : typeof errors.name != "undefined" ? errors.name.msg : "" %>
                                        </p>
                                    </div>
                                   
                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-container">
                                            <label for="add-edit-product-price" class="admin-labels">Precio<span class="required-field">*</span></label>
                                        </div>
                                        <input type="number" name="price" id="add-edit-product-price" class="add-edit-product-input inputs-fields" placeholder="Ej: 2000" value="<%=rutineToEdit.price%>">
                                        <p class="validation-error-product">
                                            <%= typeof errors == "undefined" ? "" : typeof errors.price != "undefined" ? errors.price.msg : "" %>
                                        </p>
                                    </div>

                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-container">
                                            <label for="add-edit-product-short-description" class="admin-labels">Breve descripción (max 78 caract)<span class="required-field">*</span></label>
                                        </div> 
                                        <input type="text" name="introduction" id="add-edit-product-short-description" class="add-edit-product-input inputs-fields" placeholder="Ej: Lorem ipsum dolor sit amet consectetur adipisicing elit" value="<%=rutineToEdit.introduction%>">
                                        <p class="validation-error-product">
                                            <%= typeof errors == "undefined" ? "" : typeof errors.introduction != "undefined" ? errors.introduction.msg : "" %>
                                        </p>
                                    </div>
                                    
                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-container">
                                            <label for="add-edit-product-description" class="admin-labels">Descripción completa<span class="required-field">*</span></label>
                                        </div>
                                        <textarea name="description" id="add-edit-product-description" cols="30" rows="10" class="add-edit-product-input-textarea textarea-styles" placeholder="Ej: Lorem ipsum dolor sit amet consectetur adipisicing elit. Ratione ex officia eligendi "><%=rutineToEdit.description%></textarea>
                                        <p class="validation-error-product">
                                            <%= typeof errors == "undefined" ? "" : typeof errors.description != "undefined" ? errors.description.msg : "" %>
                                        </p>
                                    </div>

                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-container">
                                            <label for="add-edit-product-duration" class="admin-labels">Duración (en semanas)<span class="required-field">*</span></label>
                                        </div> 
                                        <input type="number" name="duration" id="add-edit-product-duration" class="add-edit-product-input inputs-fields" placeholder="Ej: 8" value="<%=rutineToEdit.duration_weeks%>">
                                        <p class="validation-error-product">
                                            <%= typeof errors == "undefined" ? "" : typeof errors.duration != "undefined" ? errors.duration.msg : "" %>
                                        </p>
                                    </div>

                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-option-container">
                                            <label for="" class="admin-labels">Categoría:</label>
                                            <select name="category" id="" class="admin-select-category">
                                                <option value="rutines">Rutinas</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-option-container">
                                            <label for="" class="admin-labels">¿Agregar en la Home?</label>
                                            <% if(rutineToEdit.homepage == 1) { %> 
                                                <input type="radio" name="homepage" value="1" class="admin-radio-input" checked> Sí
                                                <input type="radio" name="homepage" value="0" class="admin-radio-input"> No
                                            <% } else { %>
                                                <input type="radio" name="homepage" value="1" class="admin-radio-input"> Sí
                                                <input type="radio" name="homepage" value="0" class="admin-radio-input" checked> No
                                            <% } %>
                                        </div>
                                    </div>
                                    
                                    <div class="admin-inputs-containers">
                                        <div class="admin-label-option-container">
                                            <label for="add-edit-product-image-input" class="add-edit-product-image-label">Imagen de la rutina</label>
                                            <input type="file" name="image" class="add-edit-product-image-input" accept="image/jpg, image/png, image/jpeg">
                                        </div>
                                        <p class="validation-error-product">
                                            <%= typeof errors == "undefined" ? "" : typeof errors.image != "undefined" ? errors.image.msg : "" %>
                                        </p>
                                    </div>
            
                                    <div class="form-add-edit-product-button-container">
                                        <button type="submit" class="add-edit-product-create-product-button buttons-style"><i class="fas fa-check save-changes-icon"></i>Guardar cambios</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>

                </article>
            </section>
        </main>


        <%- include("../partials/footer") %> 
    </body>
</html>